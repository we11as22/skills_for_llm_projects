{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PlannerOutput",
  "type": "object",
  "required": ["objective", "steps"],
  "properties": {
    "objective": { "type": "string" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "action", "input"],
        "properties": {
          "id": { "type": "string" },
          "action": { "type": "string" },
          "input": { "type": "string" },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
