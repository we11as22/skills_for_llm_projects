{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LLMResponse",
  "type": "object",
  "required": ["summary", "confidence", "tags"],
  "properties": {
    "summary": { "type": "string", "minLength": 1 },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
